      .block.centered-text
        %h1.thin        
          ADELPHI STREET
        %h3             
          4 BEDROOMS • 1 BATHROOMS • 2000 SQUARE FEET
        %h6.serif.thin
          %em
            395 adelphi st, #2l
        .separator


    .container.bg-knc-dark-gray.fg-knc-bright-gray
      .block.centered-text
        %h6
    // EXAMPLE 1 END

    #colors.section.container
      .block
        %h1.thin
          Colors
        .span-12
          %p
            These classes contain color info only and can either be extended or inserted directly into the markup:
          %ul
            %li .fg-[color-name] for text color
            %li .bg-[color-name] for background color
            %li .br-[color-name] for border color
      .block
        .span-2.centered-text
          .swatch.bg-knc-cream
          .span-2 knc-cream
        .span-2.centered-text
          .swatch.bg-knc-marigold
          .span-2 knc-marigold
        .span-2.centered-text  
          .swatch.bg-knc-dark-gray
          .span-2 knc-dark-gray
        .span-2.centered-text
          .swatch.bg-knc-gray
          .span-2 knc-gray
        .span-2.centered-text  
          .swatch.bg-knc-light-gray
          .span-2 knc-light-gray
        .span-2.centered-text  
          .swatch.bg-knc-bright-gray
          .span-2 knc-bright-gray
    
    #forms.section.container
      .block
        %h1.thin Forms
      #buttons.block
        %h2 Buttons 
      .block
        .span-8.tablet-span-4.phone-span-2.center
          .span-2.phone-span-1
            %a{href:"#", class:"button"}
              button
          .span-2.phone-span-1
            %a{href:"#", class:"button inverted"}
              inverted
          .span-2.phone-span-1
            %a{href:"#", class:"button green"}
              green
          .span-2.phone-span-1
            %a{href:"#", class:"button red"}
              red
      .block
        %h3 .short
        .span-8.tablet-span-4.phone-span-2.center
          .span-2.phone-span-1
            %a{href:"#", class:"button short"}
              short
          .span-2.phone-span-1
            %a{href:"#", class:"button short inverted"}
              inverted
          .span-2.phone-span-1
            %a{href:"#", class:"button short green"}
              green
          .span-2.phone-span-1
            %a{href:"#", class:"button short red"}
              red
      .block
        %hr
      #inputs.block
        %h2 inputs
        %h3 centered

        %form.span-6.tablet-span-3.center
          %fieldset
            %legend Legend
            .clear
              %label.span-2.right Label name
              %input.span-4.last{:placeholder => "Type something…", :type => "text"}
              %span.span-4.note.last Example block-level help text here.
            .clear
              %label.span-2.right Label name
              %input.span-4.last{:placeholder => "Type something…", :type => "text"}
              %span.span-4.note.last Example block-level help text here.
            .clear.span-6.tablet-span-4
              %button.button.span-2.pull-right{:type => "submit"} Submit
        %hr
      .block
        %h3 two panes
      .block
        .span-11.tablet-span-3.center
          %form.span-5.tablet-span-4.push-tablet-span-none.last
            %fieldset
              %legend Log In
              .clear
                %label.span-2 Email
                %input.span-3.last{:placeholder => "Type something…", :type => "text"}
                %span.span-3.note.last Example block-level help text here.
              .clear
                %label.span-2 Password
                %input.span-3.last{:placeholder => "Type something…", :type => "password"}
                %span.span-3.note.last Example block-level help text here.
              .clear.span-5.tablet-span-4
                %button.button.span-2.pull-right{:type => "submit"} Submit

          %form.span-5.push-span-1.tablet-span-4.push-tablet-span-none.last
            %fieldset
              %legend Invite a Friend
              .clear
                %label.span-2 Friend name
                %input.span-3.last{:placeholder => "Type something…", :type => "text"}
                %span.span-3.note.last Example block-level help text here.
              .clear
                %label.span-2 Friend email
                %input.span-3.last{:placeholder => "Type something…", :type => "email"}
                %span.span-3.note.last Example block-level help text here.
              .clear.span-5.tablet-span-4
                %button.button.span-2.pull-right{:type => "submit"} Submit
        %hr


      .block
        %h3 two panes fluid
      .block
        .f-span-6
          %form.f-span-3
            %fieldset
              %legend Log In
              .clear
                %label.f-span-2 Email
                %input.f-span-3{:placeholder => "Type something…", :type => "text"}
                %span.f-span-3.note Example block-level help text here.
              .clear
                %label.f-span-2 Password
                %input.f-span-3{:placeholder => "Type something…", :type => "password"}
                %span.f-span-3.note Example block-level help text here.
              .clear.f-span-5
                %button.button.span-3.last.pull-right{:type => "submit"} Submit

          %form.f-span-3
            %fieldset
              %legend Invite a Friend
              .clear
                %label.f-span-2 Friend name
                %input.f-span-3{:placeholder => "Type something…", :type => "text"}
                %span.f-span-3.note Example block-level help text here.
              .clear
                %label.f-span-2 Friend email
                %input.f-span-3{:placeholder => "Type something…", :type => "email"}
                %span.f-span-3.note Example block-level help text here.
              .clear.f-span-5
                %button.button.span-3.last.pull-right{:type => "submit"} Submit
    #tabs.section.container
      .block
        %h1.thin
          Components
      #tabs.block
        %h2
          Tabs
      .block
        %hr
      #tabs.block
        %h2
          Calendar

  #footer

%script{:src=>"http://code.jquery.com/jquery-2.0.2.min.js"}
:javascript
  var targets = {
      "iphone": 320,
      "tablet": 720,
      "small-screen":920
  }
  $('#ui-switch').on('click', function(e){
     e.target.id == "desktop" ?   $('body').width('100%'): $('body').width(targets[e.target.id])
    
  })

